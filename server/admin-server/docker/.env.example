# Docker开发环境配置

# PostgreSQL数据库连接配置
# 当使用docker-compose启动PostgreSQL时使用此配置
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/admin_server_dev?schema=public&sslmode=prefer"

# 或者使用连接池配置（生产环境推荐）
# DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/admin_server_dev?schema=public&sslmode=prefer&connection_limit=20&pool_timeout=20"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Redis配置（如果需要）
# REDIS_URL="redis://localhost:6379"

# 应用配置
NODE_ENV="development"
PORT=3000

# 其他配置
API_PREFIX="api"
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"