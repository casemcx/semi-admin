{
  "name": "@packages/components",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": {
      "import": "./dist/styles.css"
    }
  },
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "run-p build:*",
    "build:lib": "rslib build",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "check": "biome check --write",
    "dev": "npm run build:css && npm run build:lib --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "format": "biome format --write",
    "postinstall": "npm run build",
    "test": "rstest"
  },
  "devDependencies": {
    "@rsbuild/plugin-less": "catalog:build",
    "@rsbuild/plugin-react": "catalog:build",
    "@rslib/core": "catalog:build",
    "@rstest/core": "catalog:build",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "jsdom": "^26.1.0",
    "tailwindcss": "catalog:tailwindcss",
    "typescript": "catalog:node"
  },
  "peerDependencies": {
    "@packages/share": "workspace:^",
    "@packages/utils": "workspace:^",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "private": true
}
